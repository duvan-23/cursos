<h2 style="color:blue;">Vista de Productos</h2>
<% if(productos.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th style="text-align:center">Foto</th> </tr>
            <% for (const producto of productos) {%>
                <tr>
                    <td><%=producto.nombre%></td>
                    <td><%=producto.precio%></td>
                    <td style="text-align:center"><img src="<%=producto.foto%>" alt="" width="30%" height="30%" ></td>
                </tr>
                <%};%>
            </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-warning">No hay productos</h3
><% } %>
<br>
<form action="/productos" method="post">
    <button class="btn btn-success mt-3 mb-5">Formulario</button>
</form>